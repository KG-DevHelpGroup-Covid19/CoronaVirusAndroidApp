<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:layout_margin="10dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/tools"
    card_view:cardCornerRadius="5dp"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:padding="10dp"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/image_map_1"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/location"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <TextView
            android:id="@+id/text_map_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/map_address_bishkek"
            android:textSize="14sp"
            app:layout_constraintStart_toEndOf="@+id/image_map_1"
            app:layout_constraintTop_toTopOf="parent"/>

        <ImageView
            android:id="@+id/image_map_2"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/phone"
            android:layout_marginStart="3dp"
            android:layout_marginEnd="3dp"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/image_map_1" />

        <TextView
            android:id="@+id/text_map_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/map_bishkek_telephone_bishkek"
            android:layout_marginTop="15dp"
            android:textSize="14sp"
            android:layout_marginStart="3dp"
            app:layout_constraintStart_toEndOf="@+id/image_map_2"
            app:layout_constraintTop_toBottomOf="@+id/text_map_1"
            android:layout_marginLeft="3dp" />

        <ImageView
            android:id="@+id/image_map_3"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/link"
            android:layout_marginStart="3dp"
            android:layout_marginEnd="3dp"
            android:layout_marginTop="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/image_map_2" />

        <TextView
            android:id="@+id/text_map_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/map_bishkek_site_bishkek"
            android:layout_marginTop="16dp"
            android:textSize="14sp"
            android:layout_marginStart="3dp"
            app:layout_constraintStart_toEndOf="@+id/image_map_3"
            app:layout_constraintTop_toBottomOf="@+id/text_map_2"
            android:layout_marginLeft="3dp" />

        <ImageView
            android:id="@+id/image_map_4"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/image_map_3"
            app:layout_constraintStart_toEndOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>